<h1 class="ui header">All Departments</h1>
<% @departments.each do |department| %>
  <h1><%= department.name %></h1>
  <%= link_to "Show", department_path(department) %>
  <%= link_to "Edit", edit_department_path(department) %>
  <%= link_to "Destroy", department_path(department), method: :delete %>
<% end %>
<br />
<%= link_to "New Department", new_department_path %>